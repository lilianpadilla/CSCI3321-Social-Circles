<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/user_page.css" />
  </head>
  <body>
    <!-- Navigation links  -->
    <div class="top-left-links">
      <h2><a href="/">Back to Login</a></h2>
      <h2><a href="/home">Back to Game</a></h2>
    </div>

    <!-- User Profile Section -->
    <div class="container">
        <div class="header">
          <h1><%= title %></h1>
        </div>
    
        <div class="profile-card">
          <img src="/images/profile-placeholder.png" alt="User Avatar">
          <h2><%= username %></h2>
          <p>Email: <%= email %></p>
          <p>Joined: <%= joinDate %></p>
    
      <div class="user-actions">
        <h2>Actions</h2>
        <ul>
          <li><a href="/edit-profile">Edit Profile</a></li>
          <li><a href="/change-password">Change Password</a></li>
        </ul>
      </div>
    </div>

  </body>
</html>
